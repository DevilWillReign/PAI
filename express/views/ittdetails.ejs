<table>
    <tr>
        <th>ITT Name:</th>
        <td><%= data.itt_name %></td>
    </tr>
    <tr>
        <th>Institution Name:</th>
        <td><%= data.institution_name %></td>
    </tr>
    <tr>
        <th>ITT Description:</th>
        <td><%= data.itt_description %></td>
    </tr>
    <tr>
        <th>Start Date:</th>
        <td><%= data.start_date %></td>
    </tr>
    <tr>
        <th>End Date:</th>
        <td><%= data.end_date %></td>
    </tr>
    <% if (Date.now() < new Date(data.end_date)) { %>
        <tr>
            <td><a href="/offers/form?itt_id=<%= data.itt_id %>">Add Offer</a></td>
        </tr>
    <% } else if (unsettled) { %>
    <tr>
        <td>Unsettled</td>
    </tr>
    <% } %>
    <tr>
        <th>Offer Institution Name</th>
        <th>Offer Value</th>
        <th>Offer Date</th>
    </tr>
    <% for (var i=0; i < data.offers.length; i++) { %>
        <tr>
            <td><%= data.offers[i].institution_name %></td>
            <td><%= data.offers[i].offer_value %></td>
            <td><%= data.offers[i].offer_date %></td>
        </tr>
    <% } %>
</table>